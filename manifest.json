{
    "manifest_version": 3,
    "name": "Alice AI",
    "version": "1.0",
    "description": "A simple chatbot powered by Google Gemini.",
    "action": {
        "default_popup": "frontend.html",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:5000/*" 
    ],
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}